<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.believesun.mybatis.mapper.TeacherMapper">
    <select id="selectNameAndSex2" resultType="teacher">
        select * from t_teacher where name = #{name} and sex = #{arg1};
    </select>
    <!--
        多参数传参，通过Name和Sex去查找对象
        低版本的Mybatis传入的是#{0}，#{1}
            map.put("arg0",name)
            map.put("arg1",sex)
            map.put("param1",name)
            map.put("param2",sex)
    -->
    <select id="selectByNameAndSex" resultType="teacher">
        select * from t_teacher where name = #{param1} and sex = #{arg1}
    </select>
    <insert id="insertTeacherByPojo" parameterType="teacher">
        insert into t_teacher(id,name,age,height,birth,sex) values (null,#{name},#{age},#{height},#{birth},#{sex})
    </insert>
    <select id="selectById" resultType="teacher">
        select * from t_teacher where id = #{id}
    </select>
    <select id="selectByName" resultType="teacher">
        select * from t_teacher where name = #{name, javaType = String, jdbcType=VARCHAR}
    </select>
    <select id="selectByBirth" resultType="teacher" parameterType="date">
        select * from t_teacher where birth = #{birth}
    </select>
    <select id="selectBySex" resultType="teacher" parameterType="char">
        select * from t_teacher where sex = #{sex}
    </select>
    <insert id="insertTeacherByMap" parameterType="map">
        insert into t_teacher(id,name,age,height,birth,sex) values(null,#{name},#{age},#{height},#{birth},#{sex})
    </insert>
</mapper>